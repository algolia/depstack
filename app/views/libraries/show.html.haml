.row
  .col-lg-6.col-sm-8
    %h1= @library.name
    - unless @library.homepage_uri.blank?
      %h4= link_to @library.homepage_uri, @library.homepage_uri, class: 'green'
    %h2
      %small= @library.info
  .col-lg-3.visible-lg.text-center
    .panel.panel-default
      .panel-heading <span class="b">#</span> projects using it
      .panel-body
        .text-huge= number_with_delimiter @library.projects.count
  .col-lg-3.visible-lg.text-center
    .panel.panel-default
      .panel-heading <span class="b">âˆ‘</span> watchers count
      .panel-body
        .text-huge= number_with_delimiter @library.projects_watcher_count

- projects = @library.projects.top.first(10)
- unless projects.empty?
  .row
    .col-lg-12
      %h2 Used by
      = render partial: '/projects/summary', collection: projects

- if @library.github?
  .row
    .col-lg-12
      %h2 Documentation
      %section.panel.panel-default#readme
        .panel-heading README
        .panel-body
          = find_and_preserve do
            = render_readme(*@library.github_repository)
