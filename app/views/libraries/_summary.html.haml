- library, dependency = summary.is_a?(Library) ? [summary, nil] : [summary.library, summary]
.panel.panel-default
  .panel-heading
    .pull-right
      %em= "#{pluralize library.projects.count, 'project'} using it"
    %i.fa.fa-code
    = link_to library.name, library_path(library.name)
    - if dependency
      = " (#{[dependency.environment, dependency.requirement].compact.join(', ')})"
  .panel-body= library.info
